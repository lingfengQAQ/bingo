# LightRAG API 服务器配置
# 使用 Gemini 2.5 Flash 和 Gemini Embedding

# API 基础配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 目录配置
WORKING_DIR=/data/lightrag_db
INPUT_DIR=/data/input

# LLM 配置
LLM_BINDING=gemini
LLM_MODEL=gemini-2.5-flash-002
GOOGLE_API_KEY=${GOOGLE_API_KEY}

# Embedding 配置
EMBEDDING_BINDING=gemini
EMBEDDING_MODEL=text-embedding-004

# 存储配置
KV_STORAGE=JsonKVStorage
VECTOR_STORAGE=NanoVectorDBStorage
GRAPH_STORAGE=NetworkXStorage
DOC_STATUS_STORAGE=JsonDocStatusStorage

# RAG 参数（与 main.py 保持一致）
MAX_ASYNC=6
EMBEDDING_FUNC_MAX_ASYNC=8
SUMMARY_MAX_TOKENS=1000
SUMMARY_CONTEXT_SIZE=4096
FORCE_LLM_SUMMARY_ON_MERGE=12

# Chunk 配置（与优化后的参数一致）
CHUNK_TOKEN_SIZE=3000
CHUNK_OVERLAP_TOKEN_SIZE=200
ENTITY_EXTRACT_MAX_GLEANING=2

# WebUI 配置
WEBUI_TITLE=Bingo RAG API
WEBUI_DESCRIPTION=网络小说素材知识库 API

# 日志配置
LOG_DIR=/data/logs
